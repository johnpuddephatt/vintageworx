---
layout: /layouts/page.njk
---
<section class="section section--page-events">
  <div class="container">
    {% for event in collections.events %}
      <div class="row event">
        <div class="event--image">
          {% srcset event.data.image, "", "", 480, 360, "(min-width: 960px) 852px, 90vw" %}
        </div>
        <div class="event--text">
          <h3 class="event--title">{{ event.data.title }}</h3>
          <div class="event--date">{{ event.data.date | date('dddd Do MMMM') }} {{ event.data.time }}</div>
          <p class="event--description">
            {{ event.templateContent | markdownify }}
          </p>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
